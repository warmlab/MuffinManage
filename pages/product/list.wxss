.goods-list {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  margin: 100rpx 0 90rpx 0;
}

.goods-list .goods-item {
  display: flex;
  flex-direction: column;
  width: 49.25%;
  background-color: #fcfcfc;
  margin:0 0 30rpx .5%;
}

.goods-item image {
  width: 100%;
  height: 300rpx;
}

.goods-item .name {
  text-align: center;
  /*display: block;
  width: 320rpx;
  height: 55rpx;
  margin: 11.5rpx 0 22rpx 0;
  overflow: hidden;
  padding: 0 20rpx;*/
  color: #333;
  margin: 10rpx 0;
  font-size: 28rpx;
  overflow: hidden;
}

.goods-item .price-box {
  display: flex;
  align-items: center;
}

.price-box .price-label {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.price-label .price {
  display: block;
  /*width: 365.625rpx;*/
  height: 30rpx;
  text-align: center;
  font-size: 28rpx;
  color: #09bb07;
  margin: 4rpx 0;
}
.price-label .price.original {
  /*text-decoration: #e64340;*/
  font-size: 24rpx;
  font-weight: lighter;
  color: #888888;
  text-decoration-line: line-through;
}

.goods-item .price-box .checkbox {
  display: flex;
  align-items: center;
  justify-content: center;
  align-self: flex-end;
  width: 40rpx;
  height: 40rpx;
  border: 1rpx solid #bfbfbf;
  border-radius: 50%;
  margin-right: 12rpx;
  color: #fff;
  font-size: 28rpx;
}

.goods-item .price-box .checkbox.active {
  border: 1rpx solid #09bb07;
  background-color: #09bb07;
}

.view-bottom {
  display: flex;
  flex-wrap: nowrap;
  position: fixed;
  bottom: 0;
  width: 100%;
  font-size: 28rpx;
}

.view-bottom text {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 24rpx 0;
  color: #fff;
}

.view-bottom text.new {
  width: 20%;
  background-color: #09bb07;
}

.view-bottom text.clear {
  width: 40%;
  background-color: #e64340;
}

.view-bottom text.confirm {
  width: 40%;
  background-color: #ffee57;
  color: #353535;
}
