.item-list {
  display: flex;
  flex-direction: column;
  padding: 0 10rpx 90rpx 10rpx;
  /*margin-bottom: 90rpx;
  width: 96%;*/
}

.item-list .item {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #DCD9D9;
}

.item-list .item .item-body {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.item-list .item .item-body .item-head {
  width: 100%;
  overflow: hidden;
}

.item-list .item .item-body .region {
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  margin: 10rpx 0;
  font-size: 24rpx;
  overflow: hidden;
  color: #888888;
}

.item-list .item .item-body .contact {
  display: flex;
  font-size: 24rpx;
  align-items: center;
}

.item-list .item .item-body .contact .checked {
  border: 1rpx solid #ffd305;
  background-color: #ffd30588;
  border-radius: 6rpx;
  margin-right: 10rpx;
  padding: 6rpx;
  font-size: 22rpx;
}
.item-list .item .item-body .contact .name {
}

.item-list .item .item-body .contact .phone {
  margin-left: 10rpx;
  color: #888888;
}

.item-list .item .item-action {
  display: flex;
  overflow: hidden;
  align-self: stretch;
}

.item-list .item .item-action text {
  display: flex;
  color: #fff;
  padding: 0 20rpx;
}

.button-bottom {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  position: fixed;
  text-align: center;
  background: #09bb07;
  border-radius: 0;
  border: none;
  color: #fff;
  font-size: 32rpx;
  z-index: 10rpx;
  bottom: 0;
  left: 0
}
