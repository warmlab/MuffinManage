.userinfo {
  display: flex;
}


.userinfo .userinfo-avatar {
  margin: 20px 1%;
  border-radius: 50%;
  overflow: hidden;
  width: 130rpx;
  height: 130rpx;
  box-shadow: 0 0.16rem 0.32rem 0 rgba(0, 0, 0, 0.05);
}

.iser-info-box {
  display: flex;
  align-items: center;
  flex: 1;
  margin-left: 1%;
}

.userinfo-nickname {
  font-size: 34rpx;
}

.userinfo-score {
  font-size: 26rpx;
  color: #fff;
}

.userinfo-score-day {
  font-size: 24rpx;
  margin-top: 5px;
  color: #fff;
  margin-left: 20rpx;
}

.ui-col-content {
  justify-content: center;
}

.cart-list {
  display: block;
  width: 100%;
  height: 100%;
  position: relative;
}

.cart-list image {
  width: 50rpx;
  height: 50rpx;
  margin: 0 auto;
  margin-bottom: 12rpx;
}

.cart-list .red-dot {
  position: absolute;
  background-color: #ff3f3e;
  color: #fff;
  width: 36rpx;
  height: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 100%;
  right: 28rpx;
  top: -16rpx;
  font-size: 22rpx;
}

.cart-list text,
.text {
  font-size: 26rpx;
  color: #27323f;
}

.border-bottom {
  border-bottom: 2rpx solid #fbfbfb;
}

.cart-list-type image {
  width: 40rpx;
  height: 40rpx;
}

.cart-list-type text,
.cart-list text {
  font-size: 22rpx;
  color: #27323f;
}

.cart-list button,
.cart-list navigator {
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
  width: 100%;
  height: 100%;
}

.menu-icon {
  display: block;
  margin: 0 auto;
  color: #353535cc;
  font-weight: lighter;
}

@keyframes sway {
  0% {
    transform: translate3d(0, 15rpx, 0) rotate(-15deg);
  }

  17% {
    transform: translate3d(0, 0rpx, 0) rotate(15deg);
  }

  34% {
    transform: translate3d(0, 15rpx, 0) rotate(-15deg);
  }

  50% {
    transform: translate3d(0, 0rpx, 0) rotate(15deg);
  }

  67% {
    transform: translate3d(0, 15rpx, 0) rotate(-15deg);
  }

  84% {
    transform: translate3d(0, 0rpx, 0) rotate(15deg);
  }

  100% {
    transform: translate3d(0, 15rpx, 0) rotate(-15deg);
  }
}

.my-order-box {
  position: relative;
}

.my-order-box navigator {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.user-line {
  width: 100%;
  height: 18rpx;
  background-color: #f5f5f5;
}

.user-line-small {
  width: 100%;
  height: 2rpx;
  background-color: #fbfbfb;
}

.user-bg {
  background-color: #ffffff;
  padding-bottom: 30rpx;
}
