.claim {
  margin: 10rpx 2%;
  border-bottom: 1rpx solid #9b9b9b;
  color: #9b9b9b;
  padding-bottom: 8rpx;
}

.icon-area {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 1% 0;
}

.icon-area .icon-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
  width: 46.5%;
  color: #481A0e;
  border: 2rpx solid #481A0E;
  border-radius: 10px;
  margin: 0 0 2% 2%;
}

.icon-area .icon-item .icon {
  font-weight: lighter;
  margin: 40rpx 0;
}

.icon-area .icon-item .label {
  font-size: 28rpx;
  margin-top: 10rpx;
}

.shop-info {
  display: flex;
  flex-direction: column;
}

.shop-info text {
  font-size: 28rpx;
  color: #9b9b9b;
  margin: 0 2% 10rpx 2%;
}

.shop-info view {
  font-size: 32rpx;
  margin: 0 2% 20rpx 2%;
  border-bottom: 1rpx solid #f5f5f5;
}

.program-area {
  display: flex;
  flex-direction: column;
  margin-bottom: 90rpx;
}

.program-area text {
  margin: 40rpx 2% 10rpx 2%;
  color: #9b9b9b;
  font-size: 28rpx;
}

.program-area view {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 90rpx;
  background-color: #481A0E;
  color: #ffffff;
  font-size: 32rpx;
  margin: 0 2%;
  border-radius: 10rpx;
}
