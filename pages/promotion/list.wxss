.item-list {
  display: flex;
  flex-direction: column;
  padding: 0 10rpx 90rpx 10rpx;
  /*margin-bottom: 90rpx;
  width: 96%;*/
}

.item-list .item {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #DCD9D9;
}

.item-list .item .item-body {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.item-list .item .item-body .item-head {
  width: 100%;
  overflow: hidden;
}

.item-list .item .item-body .item-content {
  display: flex;
  flex-wrap: nowrap;
  margin: 10rpx 0;
  overflow: hidden;
}

.item-list .item .item-body .item-content .product {
  display: flex;
  flex-direction: column;
  margin-right: 8rpx;
}

.item-list .item .item-body .item-content image {
  width: 100rpx;
  height: 100rpx;
}

.item-list .item .item-body .item-content text {
  font-size: 24rpx;
  overflow: hidden;
  color: #a18d65;
  background-color: #f0ece1cc;
  height:36rpx;
  margin-top:-36rpx;
}

.item-list .item .item-body .item-time {
  height: 37rpx;
  font-size: 25rpx;
  line-height: 37rpx;
  overflow: hidden;
  color: #666;
}

.item-list .item .item-action {
  display: flex;
  overflow: hidden;
  align-self: stretch;
}

.item-list .item .item-action text {
  display: flex;
  padding: 40rpx;
  font-size: 36rpx;
  align-self: stretch;
  align-items: center;
  color: #fff;
  font-size: 28rpx;
}

.button-bottom {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  position: fixed;
  text-align: center;
  background: #09bb07;
  border-radius: 0;
  border: none;
  color: #fff;
  font-size: 32rpx;
  z-index: 10rpx;
  bottom: 0;
  left: 0
}
