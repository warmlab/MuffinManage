/* pages/promotion/index.wxss */
.products {
  display: flex;
  height: 5em;
  align-items: center;
  border: thin solid #888888;
  /*border-radius: .5em;*/
}

.add-btn {
  color: #09bb07;
  margin-left: .15em;
  font-size: 42rpx;
}

.item {
  width: 100%;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #f4f4f4;
  margin-bottom: 8rpx;
}

.item .remove {
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  height: 44rpx;
  width:44rpx;
  position: absolute;
  right: 10rpx;
  background-color: #e64340;
  color: #fff;
  margin-top: 10rpx;
}

.item .image {
  width: 40%;
  height: 320rpx;
}

.item .summary-area {
  display: flex;
  flex-direction: column;
  width: 60%;
  padding-left: 10rpx;
  font-size: 24rpx;
  /*height: 100%;*/
}

.item .summary-area .name-area {
  height: 80%;
}

.item .summary-area .amount-area {
  display: flex;
  align-items: center;
  border: 1rpx solid #bfbfbf;
  border-radius: 10rpx;
  /*float: right; */
}

.name-area .name {
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 10rpx;
}

.name-area .price {
  font-weight: bold;
}

.name-area .summary {
  font-size: 20rpx;
  margin: 20rpx 0 20rpx 0;
}

.amount-area .amount-action {
  display: flex;
  padding: 10rpx 20rpx;
  font-size: 32rpx;
}

.amount-area .amount {
  /*line-height: 68.75rpx;
    border-left: 1px solid #ccc;
    border-right: 1px solid #ccc;
    float: left;*/
  width: 70rpx;
  display: block;
  overflow: hidden;
  padding: 0 4rpx;
  text-align: center;
}

.amount-area .amount-action.cut {
  border-right: 1rpx solid #bfbfbf;
}

.amount-area .amount-action.add {
  border-left: 1rpx solid #bfbfbf;
}

.amount-area .btn {
  font-size: 42rpx;
}

.new-image {
  height: 4em;
  width: 4em;
  margin-left: .5em;
  border-radius: .3em;
}

.date {
  width: 30%;
  height: 1em;
  text-align: center;
  /*transform: scale(.8);
    transform-origin: left;*/
}

.time {
  width: 18%;
  height: 1em;
  text-align: center;
  /*transform: scale(.8);
    transform-origin: left;*/
}

.datetimesplit {
  width: 4%;
  text-align: center;
}

.input-switch {
  border: thin solid darkgray;
  width: 60%;
  border-radius: .2em;
  margin-bottom: .5em;
  /*transform: scale(.8);
    transform-origin: left;*/
}

.switch-aside {
  width: 40%;
  padding-left: .5em;
  /*transform: scale(.8);
    transform-origin: left;*/
}

.input {
  width: 100%;
  /*transform: scale(.8);
    transform-origin: left;*/
}

.switch {
  width: 100%;
  /*transform: scale(.8);
    transform-origin: left;*/
}

.note {
  width: 100%;
  height: 160rpx;
}
